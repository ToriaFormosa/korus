mixin pagination(className)
	.pagination(class=className)
		a.pagination__btn.pagination__btn--first(href='#')
			+icon('chevron-right')(width='14', height='24')
		.pagination__links
			a.pagination__link(href='#') 1
			span.pagination__link ...
			a.pagination__link(href='#') 14
			a.pagination__link(href='#') 15
			a.pagination__link(href='#') 16
			a.pagination__link(href='#') 17
			a.pagination__link(href='#') 18
			a.pagination__link(href='#') 19
			a.pagination__link.active(href='#') 20
		a.pagination__btn.pagination__btn--last(href='#', style='display: none')
			+icon('chevron-right')(width='14', height='24')

